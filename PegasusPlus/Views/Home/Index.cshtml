@{
    ViewBag.Title = "Pegasus";
    ViewBag.appTest = true;
}

<link href="@Url.Content("~/Content/Suite.css")" rel="stylesheet" type="text/css" />


<style>
    div.polaroid {
        background-color: white;
        box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);
    }

    .rcorners {
        border-radius: 8px;
        background: lightgray;
        padding: 20px;
        width: 210px;
        height: 190px;
    }

    p.serif {
        font-family: "Times New Roman", Times, serif;
        font-size: 14px;
    }

    p.sansserif {
        font-family: "Segoe UI", Arial, Helvetica, sans-serif;
        font-size: 14px;
    }

    .button {
        background-color: #2a496f;
        border: none;
        border-radius: 4px;
        color: white;
        padding: 8px 8px;
        text-align: center;
        text-decoration: none;
        display: inline-block;
        font-size: 18px;
        margin: 2px 2px;
        min-width: 160px;
        transition-duration: 0.5s;
        cursor: pointer;
    }

        .button:hover {
            background-color: #3f6ea6;
            color: white;
        }

        .button span {
            cursor: pointer;
            display: inline-block;
            position: relative;
            transition: 0.5s;
        }

            .button span:after {
                content: '\00bb';
                position: absolute;
                opacity: 0;
                top: 0;
                right: -20px;
                transition: 0.5s;
            }

        .button:hover span {
            padding-right: 20px;
            color: white;
        }

            .button:hover span:after {
                opacity: 1;
                right: 0;
                color: white;
            }
</style>

<div id="carouselIndicators" class="carousel slide container" data-ride="carousel">
    <ol class="carousel-indicators">
        <li data-target="#carouselIndicators" data-slide-to="0" class="active"></li>
        <li data-target="#carouselIndicators" data-slide-to="1"></li>
        <li data-target="#carouselIndicators" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner polaroid">
        <div class="carousel-item active">
            <img class="d-block w-100" src="~/Images/carousel-slide1.jpg" alt="First slide" width="300" height="300" style="object-fit:cover">
            <div class="carousel-caption d-none d-md-block">
                <h4>ΙΕΚ ΟΑΕΔ</h4>
            </div>
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="~/Images/carousel-slide2.jpg" alt="Second slide" width="300" height="300" style="object-fit:cover">
            <div class="carousel-caption d-none d-md-block">
                <h4>ΘΕΩΡΗΤΙΚΗ ΚΑΤΑΡΤΙΣΗ</h4>
            </div>
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="~/Images/carousel-slide3.jpg" alt="Third slide" width="300" height="300" style="object-fit:cover">
            <div class="carousel-caption d-none d-md-block">
                <h4>ΠΡΑΚΤΙΚΗ ΑΣΚΗΣΗ</h4>
            </div>
        </div>
    </div>
    <a class="carousel-control-prev" href="#carouselIndicators" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselIndicators" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

