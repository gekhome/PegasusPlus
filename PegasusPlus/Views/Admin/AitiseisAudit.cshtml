                .Editable(edit => edit.Mode(GridEditMode.PopUp).Window(w => w.Width(800).Height(640).Title("Καρτέλα επιτηδεύματος")).TemplateName("FormFreelance2"))
                .HtmlAttributes(new { style = "font-size:13px" })
